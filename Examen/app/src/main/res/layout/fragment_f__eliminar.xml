<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/otherWhite"
    android:orientation="vertical"

    tools:context="com.example.nicomscr.betaprueba3.Fragments.Medicamento.F_Eliminar">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="70dp"
            android:layout_height="120dp"
            app:srcCompat="@mipmap/i_eliminar" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="9"
        android:layout_marginLeft="30px"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.6"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Nombre"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:textSize="40px"

            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:id="@+id/cboEliminarM" />

    </LinearLayout>

    <Button
        android:layout_marginTop="60px"
        android:id="@+id/btnEliminarM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:background="@color/colorPrimary"
        android:textColor="@color/otherWhite"
        android:onClick="eliminar"
        android:layout_gravity="center"
        />

</LinearLayout>
