<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/otherWhite"

    android:id="@+id/activity_registro"
    tools:context="com.example.nicomscr.betaprueba3.Activity.Registro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/i_resgistro_tittle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        >

        <ImageView
            android:layout_marginTop="10dp"

            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/i_txt_email"
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="4"
            android:hint="Ingrese e-mail"
            android:background="@color/colorAccent"
            android:maxLength="45"
            android:id="@+id/txtUserR"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="20dp"
        android:weightSum="5">

        <ImageView
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/i_txt_pass"
            android:layout_weight="1"
            />

        <EditText
            android:id="@+id/txtPass1R"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="4"
            android:background="@color/colorAccent"

            android:hint="*********"
            android:inputType="textPassword"
            android:maxLength="45" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        >

        <ImageView
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/i_txt_pass"
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="4"
            android:hint="*********"
            android:background="@color/colorAccent"
            android:inputType="textPassword"
            android:maxLength="45"
            android:id="@+id/txtPass2R"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:weightSum="4">

        <Button
            android:id="@+id/btnCrearR"
            android:layout_width="0dp"
            android:background="@color/colorPrimaryDark"

            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginRight="10px"
            android:text="Crear" />

        <Button
            android:layout_marginLeft="10px"
            android:id="@+id/btnCancelarR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"

            android:layout_weight="2"
            android:text="Delete *" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="3"

        >

        <Button
            android:id="@+id/btnGoLoginR"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:background="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Ir al login" />


    </LinearLayout>






</LinearLayout>
